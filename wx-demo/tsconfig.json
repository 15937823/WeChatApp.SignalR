{
  "compilerOptions": {
    "strictNullChecks": true,
    "noImplicitAny": true,
    "module": "CommonJS",
    "target": "es5",
    "allowJs": false,
    "experimentalDecorators": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "alwaysStrict": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "removeComments": true,
    "pretty": true,
    "strictPropertyInitialization": true,
    "typeRoots": [
      "./typings"
    ],
    "skipLibCheck": true,
    "lib": [ "es2015","es2015.promise" ],
    "rootDir": "./miniprogram",
    "baseUrl": ".",
    "paths": {
      "wechat-app-signalr": [
          "../signalr"
      ],
      "@microsoft/signalr-protocol-msgpack": [
          "./signalr-protocol-msgpack"
      ]
    },
    "types": [
      "miniprogram-api-typings"
    ]
  },
  "include": [
    "./miniprogram/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "miniprogram_dist",
    "**/*.spec.ts"
  ]
}
